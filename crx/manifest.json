{
    "manifest_version": 3,
    "name": "Barbora URL Modifier",
    "version": "1.0",
    "description": "Automatically appends 'order=priceAsc' to URLs except the excluded ones.",
    "permissions": [
        "webNavigation",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.barbora.lt/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "host_permissions": [
        "*://*.barbora.lt/*"
    ]
}
